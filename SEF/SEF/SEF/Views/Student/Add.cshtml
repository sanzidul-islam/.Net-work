@model SEF.Models.Database.Student
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<form action="" method="post">
    <label for="id">ID: </label>
    <input type="text" name="ID" value="@Model.ID" class="form-control" />
    <label for="name">Name: </label>
    <input type="text" name="Name" value="@Model.Name" class="form-control" />
    <label for="fname">Fname: </label>
    <input type="text" name="Fname" value="@Model.Fname" class="form-control" />
    <label for="cgpa">CGPA: </label>
    <input type="text" name="CGPA" value="@Model.CGPA" class="form-control" />
    <input type="submit" value="Update" class="btn btn-success" />


</form>